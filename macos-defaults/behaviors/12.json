{
    "Capitalize words automatically": {
        "enable": "defaults write NSGlobalDomain NSAutomaticCapitalizationEnabled -bool true",
        "disable": "defaults write NSGlobalDomain NSAutomaticCapitalizationEnabled -bool false"
    },
    "Add period with double-space": {
        "enable": "defaults write NSGlobalDomain NSAutomaticPeriodSubstitutionEnabled -bool true",
        "disable": "defaults write NSGlobalDomain NSAutomaticPeriodSubstitutionEnabled -bool false"
    },
    "Correct spelling automatically": {
        "enable": "defaults write NSGlobalDomain NSAutomaticSpellingCorrectionEnabled -bool true && defaults write NSGlobalDomain WebAutomaticSpellingCorrectionEnabled -bool true",
        "disable": "defaults write NSGlobalDomain NSAutomaticSpellingCorrectionEnabled -bool false && defaults write NSGlobalDomain WebAutomaticSpellingCorrectionEnabled -bool false"
    },
    "Use smart quotes and dashes": {
        "enable": "defaults write NSGlobalDomain NSAutomaticDashSubstitutionEnabled -bool true && defaults write NSGlobalDomain NSAutomaticQuoteSubstitutionEnabled -bool true",
        "disable": "defaults write NSGlobalDomain NSAutomaticDashSubstitutionEnabled -bool false && defaults write NSGlobalDomain NSAutomaticQuoteSubstitutionEnabled -bool false"
    },
    "Display the Finder \"Quit\" option": {
        "enable": "defaults write com.apple.finder QuitMenuItem -bool true",
        "disable": "defaults write com.apple.finder QuitMenuItem -bool false"   
    },
    "Show file extensions in the Finder": {
        "enable": "defaults write NSGlobalDomain AppleShowAllExtensions -bool true",
        "disable": "defaults write NSGlobalDomain AppleShowAllExtensions -bool false"
    },
    "Show hidden files inside the Finder": {
        "enable": "defaults write com.apple.Finder AppleShowAllFiles -bool true",
        "disable": "defaults write com.apple.Finder AppleShowAllFiles -bool false"
    },
    "Do not display the changing file extension warning": {
        "enable": "defaults write com.apple.finder FXEnableExtensionChangeWarning -bool false",
        "disable": "defaults write com.apple.finder FXEnableExtensionChangeWarning -bool true"
    },
    "Use column view in all Finder windows by default": {
        "enable": "defaults write com.apple.finder FXPreferredViewStyle -string clmv",
        "disable": ""
    },
    "Autohide the dock": {
        "enable": "defaults write com.apple.dock autohide -bool true",
        "disable": "defaults write com.apple.dock autohide -bool false"
    },
    "Disable animation when the dock appears and disappears": {
        "enable": "defaults write com.apple.dock autohide-time-modifier -float \"0\"",
        "disable": ""
    },
    "Do not display recent apps in the Dock": {
        "enable": "defaults write com.apple.dock show-recents -bool false",
        "disable": "defaults write com.apple.dock show-recents -bool true"
    },
    "Display path bar in Finder window": {
        "enable": "defaults write com.apple.finder ShowPathbar -bool true",
        "disable": "defaults write com.apple.finder ShowPathbar -bool false"
    }
}